@model Category
@*Just so that it doesnt use creates form*@
<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="=text-primary">Delete Category</h2>
			<hr />
		</div>
		@*Display all validation errors*@
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" disabled class="form-control" />
			@* <span asp-validation-for="Name" class="text-danger"></span> No need for validation *@
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:175px">Delete</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:175px">
			Back to list
		</a>
	</div>
</form>
@section Scripts{
	@*include partial view for validation
		SO no refresh on error validation
	*@
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}